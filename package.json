{
  "name": "majorcms-coach",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Big Chili Software Co., Ltd.",
    "url": "https://www.bigchilisoftware.com/"
  },
  "build": {
    "appId": "com.electron.majorcms-coach",
    "productName": "Major CMS Coach",
    "copyright": "Copyright Â© 2019 ${author}",
    "win": {
      "target": [
        "portable"
      ],
      "icon": "https://cdn2.iconfinder.com/data/icons/designer-skills/128/react-256.png",
      "legalTrademarks": "${author}"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "prepack": "yarn build",
    "pack": "build -w"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "rescripts": [
    "env"
  ],
  "devDependencies": {
    "@rescripts/cli": "^0.0.11",
    "@rescripts/rescript-env": "^0.0.10",
    "concurrently": "^4.1.1",
    "cross-env": "^5.2.0",
    "electron": "^5.0.6",
    "electron-builder": "^20.44.4",
    "typescript": "^3.5.2",
    "wait-on": "^3.2.0"
  }
}
